{
  "manifest_version": 3,
  "name": "Image Resizer and Downloader",
  "version": "1.0",
  "description": "Upload, resize, and download images.",
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
